@{
    ViewBag.Title = "ChiTietSGH";
}
@using DoA_QLCuaHangBanDongHo.Models;
@model item
<h2></h2>
@if (Session["dn"] != null)
{
    <p>Chào bạn, @Session["dn"]</p> 
}
<div class="card mb-3" style="max-width: 100%;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <div class="inner"><img src="~/Content/imgWEB/@Model.hinhanh" class="card-img" alt="Card image cap"></div>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title" style="font-weight:bold;font-family: Bookman Old Style; font-size:xx-large; color:black">@Model.tensanpham</h5>
        <p class="card-text" style="font-family: Bookman Old Style; font-size:large; color:black">@Model.mota</p>
        <p class="card-text" style="font-family: Bookman Old Style; font-size:large; color:black;font-style:italic">@String.Format("{0:0,0}" ,@Model.dongia) VND</p>
        <form class="form-inline justify-content-start">
            <span class="fa-stack fa-lg">
                <i class="fa fa-square-o fa-stack-2x"></i>
                <i class="fa fa-twitter fa-stack-1x"></i>
            </span>
                
            <span class="fa-stack fa-lg">
                <i class="fa fa-square-o fa-stack-2x"></i>
                <i class="fa fa-facebook fa-stack-1x"></i>
            </span>
                
            <span class="fa-stack fa-lg">
                <i class="fa fa-square-o fa-stack-2x"></i>
                <i class="fa fa-youtube fa-stack-1x"></i>
            </span>
               
            <span class="fa-stack fa-lg">
                <i class="fa fa-square-o fa-stack-2x"></i>
                <i class="fa fa-pinterest fa-stack-1x"></i>
            </span>
                
            <span class="fa-stack fa-lg">
                <i class="fa fa-square-o fa-stack-2x"></i>
                <i class="fa fa-linkedin fa-stack-1x"></i>
            </span>

            <span class="fa-stack fa-lg">
                <i class="fa fa-square-o fa-stack-2x"></i>
                <i class="fa fa-google-plus fa-stack-1x"></i>
           </span>
        </form>
          <a href="@Url.Action("ThemGioHang","GioHang", new {ms=@Model.masanpham })" class="btn btn-primary">Thêm vào giỏ</a>
      </div>
    </div>
  </div>
</div>