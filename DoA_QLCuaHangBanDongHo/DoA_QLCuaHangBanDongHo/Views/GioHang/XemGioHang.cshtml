@{
    ViewBag.Title = "XemGioHang";
}
@using DoA_QLCuaHangBanDongHo.Models;
@model List<item>
<h2></h2>
@if (Session["dn"] != null)
{
    <p>Chào bạn, @Session["dn"]</p> 
}
<table class="table table-striped table-dark">

  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Mã sản phẩm</th>
      <th scope="col">Tên sản phẩm</th>
      <th scope="col">Mô tả</th>
      <th scope="col">Đơn giá</th>
      <th scope="col">Số lượng</th>
      <th scope="col"></th>
    </tr>
  </thead>
@foreach(var i in Model)
{
    
  <tbody>

    <tr>
      <th scope="row"></th>
      <td>@i.masanpham</td>
      <td>@i.tensanpham</td>
      <td>@i.mota</td>
      <td>@String.Format("{0:0,0}" ,@i.dongia)</td>
       @using (Html.BeginForm("CapNhatGioHang","GioHang", new { @mi= i.masanpham} ))
      {
      <td><input  type="number" min="1" name="txtSoLuong" value="@i.soluong" style="background-color:white;width:70px" /></td>
      <td>
          <a href="@Url.Action("ChiTietSGH","GioHang", new {mi=@i.masanpham })">Chi tiết</a>
          <a href="@Url.Action("Xoa","GioHang", new {mi=@i.masanpham })">Xóa</a>
      </td>
      <td> <input class="btn btn-dark" type="submit" value="Cập Nhật"/></td>
       }
    </tr>
      <tr>
            <td colspan="5">Tổng số lượng: @ViewBag.sl - Thành tiền: @String.Format("{0:0,0}" ,@ViewBag.tt) VNĐ</td>
      </tr>

  </tbody>
    
}
</table>
<a href="@Url.Action("DatHang","GioHang")"><input class="form-control col-md-3 btn btn-success"  id="btnDatHang" type="submit" value="Đặt hàng" /></a>

