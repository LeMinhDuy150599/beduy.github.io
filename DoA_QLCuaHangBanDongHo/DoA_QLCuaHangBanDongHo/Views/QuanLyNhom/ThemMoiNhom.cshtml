@model DoA_QLCuaHangBanDongHo.Models.NHOM

@{
    ViewBag.Title = "ThemMoiNhom";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>THÊM MỚI NHÓM</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>NHOM</legend>

        @Html.HiddenFor(model => model.MaNhom)

         <table class="table table-bordered">
    <tr>
        <td>
             TÊN NHÓM
        </td>
        <td>
            <div class="editor-field">
             @Html.EditorFor(model => model.TenNhom)
            @Html.ValidationMessageFor(model => model.TenNhom)
            </div>
        </td>
    </tr>
</table>
        <p>
            <input class="btn btn-warning" type="submit" value="Save" /> |
             @Html.ActionLink("TRỞ VỂ", "QuanLyNhom",null,  new { @class = "btn btn-dark" })
        </p>
    </fieldset>
}
