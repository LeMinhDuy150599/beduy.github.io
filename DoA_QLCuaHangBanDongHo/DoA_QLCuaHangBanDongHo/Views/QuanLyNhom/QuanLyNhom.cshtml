@model IEnumerable<DoA_QLCuaHangBanDongHo.Models.NHOM>

@{
    ViewBag.Title = "QuanLyNhom";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2 style="text-align:center">QUẢN LÝ NHÓM</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "ThemMoiNhom")
</p>
<table class="table table-bordered">
    <tr class="thead-dark" style="text-align:center">
        <th>
           TÊN NHÓM
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="table table-striped table-warning">
        <td>
            @Html.DisplayFor(modelItem => item.TenNhom)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaNhom },  new { @class = "btn btn-dark" }) |
            @Html.ActionLink("Chi Tiết", "ChiTietNhom", new { id=item.MaNhom },  new { @class = "btn btn-danger" }) |
            @Html.ActionLink("Xoa", "XoaNhom", new { id=item.MaNhom },  new { @class = "btn btn-dark" }) 
        </td>
    </tr>
}

</table>